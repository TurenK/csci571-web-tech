<LinearLayout android:id="@+id/product_subtitle_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="start"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/product_subtitle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtitle"
        android:textSize="@dimen/search_item_title"
        android:textColor="@color/black"
        android:gravity="center"/>
    <TextView
        android:id="@+id/product_subtitle_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_text"
        android:textSize="@dimen/search_item_ship"
        android:gravity="center"/>
</LinearLayout>