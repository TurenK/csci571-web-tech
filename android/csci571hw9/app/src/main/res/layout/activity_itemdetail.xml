<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context=".SearchresultActivity"
    android:orientation="vertical"
    android:gravity="top">

    <LinearLayout
        android:id="@+id/itemdetail_barlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/itemdetail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            app:titleTextColor="@color/white"
            android:orientation="horizontal"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:gravity="start">

            <TextView android:id="@+id/itemdetail_title"
                android:layout_width="@dimen/itemdetail_toolbar_text_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/toolbartext"
                android:textColor="@color/white"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/fragments_margin_small"
                app:layout_constraintEnd_toStartOf="@id/itemdetail_redirectto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/itemdetail_redirectto"
                android:layout_width="@dimen/fragments_toolbarimg_height_width"
                android:layout_height="@dimen/fragments_toolbarimg_height_width"
                android:src="@mipmap/ic_redirect"
                android:background="@color/orange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="@dimen/fragments_margin_big"
                android:contentDescription="@string/item_imagedescription" />
        </androidx.appcompat.widget.Toolbar>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/itemdetail_tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/itemdetail_margin_PagerTab"
            android:paddingBottom="@dimen/itemdetail_margin_PagerTab"
            app:tabIndicatorColor="@color/purple"
            app:tabMode="fixed"
            app:tabPaddingStart="0dp"
            app:tabPaddingEnd="0dp"
            app:tabPaddingBottom="0dp"
            app:tabPaddingTop="0dp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/itemdetail_progressBar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/itemdetail_barlayout"
        android:gravity="center"
        android:visibility="gone">
        <ProgressBar
            android:id="@+id/itemdetail_progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@layout/progressbar"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/searching_product_details"
            android:gravity="center"
            android:layout_below="@id/itemdetail_progressBar"/>
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/itemdetail_viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemdetail_barlayout"
        android:visibility="gone">

    </androidx.viewpager.widget.ViewPager>

</RelativeLayout>